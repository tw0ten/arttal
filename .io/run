#!/bin/sh
set -e
cd .io

( set -e; cd o/font

for family in */; do ( set -e
	cd "$family"
	family="$(echo "$family" | sed 's/.$//')"
	( cd ttf && for file in *; do
		sudo cp -v \
			"$file" "/usr/share/fonts/TTF/$family-$file"
	done )
) done

fc-cache -f )


( set -e
	sudo cp -v i/locale /usr/share/i18n/locales/C
	sudo locale-gen )

set -x
fc-match sans-serif
fc-match serif
fc-match monospace
fc-match system-ui
